<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    
<div id="contenedor-cards" class="d-flex flex-wrap gap-3">
                 <script>
      const lista = ["Argentina", "España", "China"];
      // 1. Obtener el contenedor donde se añadirán las cards
      const contenedor = document.getElementById("contenedor-cards");
      let htmlCards = ""; // Variable para almacenar el HTML generado

      // Iterar sobre la lista para obtener cada país (elemento)
      lista.forEach(elemento => {
        // 2. Construir la plantilla HTML (template literal)
        // Usamos ${elemento} para insertar el valor del país en <p class="card-text">
        const cardHTML = `
          <div class="card vuelo-card">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="d-flex align-items-center mb-2">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-plane-departure text-primary"></i> Buenos Aires (EZE) 
                                        <i class="fas fa-arrow-right mx-2"></i> 
                                        <i class="fas fa-plane-arrival text-success"></i> Shangai (CHI)
                                    </h5>
                                    <span class="badge bg-primary ms-2 badge-clase">Turista</span>
                                </div>
                                <div class="text-muted mb-2">
                                    <i class="far fa-calendar-alt"></i> 08 Nov 2024 - 22:00 | 09 Nov 2024 - 14:30
                                </div>
                                <div class="text-muted">
                                    <i class="fas fa-plane"></i> NeoDat Airlines | <i class="fa-solid fa-couch"></i> Asientos disponibles: 12
                                </div>
                            </div>
                            <div class="col-md-2 text-center">
                                <div class="precio-destacado">$125.000</div>
                                <small class="text-muted">Precio por persona</small>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#modalEquipaje" data-vuelo="1">
                                     Seleccionar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
        `;
        // 3. Acumular el HTML de cada card
        htmlCards += cardHTML;
      });

      // 4. Insertar todo el HTML generado en el contenedor
      // Esto genera 3 cards con sus respectivos países.
      contenedor.innerHTML = htmlCards; 
    </script>
</div>

</body>
</html>

