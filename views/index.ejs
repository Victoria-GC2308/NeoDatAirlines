<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Neo DatAirlines</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    header {
      background-color: #b542b1;
      color: white;
      padding: 1rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
    }
    header img {
      height: 50px;
    }
    nav {
      background-color: #b542b1;
      padding: 0.5rem;
      display: flex;
      justify-content: center;
      gap: 1rem;
      flex-wrap: wrap;
    }
    .form-section {
      padding: 2rem;
    }
    .form-section h2 {
      margin-bottom: 1rem;
    }
    footer {
      background-color: #0d6efd;
      color: white;
      text-align: center;
      padding: 1rem;
      margin-top: 2rem;
    }

     .destinations {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      justify-content: center;
    }
    .destinations .col-md-3 {
      flex: 0 0 calc(25% - 15px);
      display: flex;
    }
    .destinations img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 10px;
      transition: transform 0.3s ease;
    }
     .destinations img:hover {
      transform: scale(1.05); /* Efecto de zoom al pasar el cursor */
    }
        nav .btn-outline-primary {
      color: white;
      border-color: white;
      transition: all 0.3s ease;
    }
    nav .btn-outline-primary:hover {
      background-color: #9e3a9a;
      color: white;
      border-color: #9e3a9a;
      transform: translateY(-2px);
    }
    .contact-buttons {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      gap: 10px;
    }
    .contact-buttons button {
      margin: 0.5rem;
    }
  </style>
  <script src="https://kit.fontawesome.com/275d3faf2c.js" crossorigin="anonymous"></script>
</head>
<body>

  <!--Encabezado y barra de navegación-->
  <header>
    <img src="./NeoData.jpg" alt="Logo NeoDatAirlines">
    <h1>Neo DatAirlines</h1>
    <!-- barra de navegación -->
  <nav>
    <button class="btn btn-outline-primary">Inicio</button>
    <button class="btn btn-outline-primary">Búsqueda de vuelo</button>
    <button class="btn btn-outline-primary">Atención al cliente</button>
    <button class="btn btn-outline-primary">Acerca de nosotros</button>
  </nav>
  </header> 
  

  <!-- Sección de formularios -->
  <div class="container form-section">
    <div class="row">
      <!-- Registro -->
      <div class="col-md-6">
        <h2>Registrate</h2>
        <form action="/usuario_nuevo" method="post">
          <div class="mb-3">
            <label for="nombre" class="form-label">Nombre y apellido</label>
            <input type="text" class="form-control" name="nombre" id="nombre">
          </div>
          <div class="mb-3">
            <label for="dni" class="form-label">DNI</label>
            <input type="text" class="form-control" name="dni" id="dni">
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Correo electrónico</label>
            <input type="email" class="form-control" name="email" id="email">
          </div>
          <div class="mb-3">
            <label for="telefono" class="form-label">Teléfono</label>
            <input type="tel" class="form-control" name="telefono" id="telefono">
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Contraseña</label>
            <input type="password" class="form-control" name="password" id="password">
          </div>
          <button type="submit" class="btn btn-primary" id="listo">Registrarse</button>
          <script>
              // 1. Obtener una referencia al elemento botón usando su ID
              const boton = document.getElementById('listo');

              // 2. Adjuntar un "escuchador de eventos" (event listener)
              // Este escuchador espera el evento 'click' y, cuando ocurre, ejecuta la función.
              boton.addEventListener('click', function() {
                  // 3. La acción que se ejecuta: mostrar la caja de alerta
                  alert("¡Se creo la cuenta!");
              });
          </script>
        </form>
      </div>

      <!-- Login -->
      <div class="col-md-6">
        <h2>¿Ya tenés un usuario registrado? Ingresá acá</h2>
        <form action="/usuario" method="post">
          <div class="mb-3">
            <label for="loginEmail" class="form-label">Correo electrónico</label>
            <input type="email" class="form-control" name="loginEmail" id="mail_registrado">
          </div>
          <div class="mb-3">
            <label for="loginPassword" class="form-label">Contraseña</label>
            <input type="password" class="form-control" name="loginPassword" id="loginPassword">
          </div>
          <button type="submit" class="btn btn-success">Ingresar</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Collage de destinos -->
  <div class="container destinations my-4">
    <div class="row g-3">
      <div class="col-md-3"><img src="./piramidesEgipto.jpg" alt="Egipto"></div>
      <div class="col-md-3"><img src="./cristoRedentor.jpg" alt="Brasil"></div>
      <div class="col-md-3"><img src="./Londres.jpg" alt="Londres"></div>
      <div class="col-md-3"><img src="./ColiseaRoma.jpg" alt="Roma"></div>
      <div class="col-md-3"><img src="./peritoMoreno.jpg" alt="Glaciar"></div>
      <div class="col-md-3"><img src="./Shangai.jpg" alt="China"></div>
      <div class="col-md-3"><img src="./torreParis.jpg" alt="Paris"></div>
    </div>
  </div>

  <!-- Pie de página -->
  <footer>
     <!-- Botones de contacto -->
  <div class="container text-center contact-buttons">
    <i class="fa-regular fa-envelope"></i><button class="btn btn-danger">Gmail</button>
    <button class="btn btn-info">NeoData</button>
    <i class="fa-brands fa-whatsapp"></i><button class="btn btn-success">WhatsApp</button>
  </div>

    <p>&copy; 2025 Neo DatAirlines. Todos los derechos reservados.</p>
  </footer>

</body>
</html>